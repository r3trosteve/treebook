
  <div class="page-header">
    <h1>Treebook Statuses</h1>
  </div>
  
  <% @statuses.each do |status| %>
  <div class="row">
    <article class="status">
      <div class="col-sm-1 col-md-1">
        <%= link_to image_tag(status.user.gravatar_url), profile_path(status.user), :class => 'user-img' %>
      </div>
      <h2 class="col-sm-7 col-md-7"><%= status.user.full_name %><span class="username"><%= link_to "@" + status.user.profile_name, profile_path(status.user) %></span></h2>
      <p class ="time col-sm-4 col-md-4"><%= link_to time_ago_in_words(status.created_at) + " ago", status %></p>
      <p><%= status.content %></p>
      <div class="row">
        <div class="meta col-sm-7 col-sm-offset-1 col-md-7 col-md-offset-1">   
          <span class="admin">
            <%= link_to "Edit", edit_status_path(status) %> |
            <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure? This can't be undid. Undoned. Undidded."} %>
          </span>
        </div>
      </div>
  </div>
      
      
     
      
    </article>
  <% end %>

  <br />


